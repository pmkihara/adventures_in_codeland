<div class="home-banner pixel-art", style="background-image: url(<%= image_path('home_banner.png')%>)">
  <div class="home-container form-title">
    <h2 class="">Forgot your password?</h2>
    <%= link_to 'âœ–', root_path, class: 'x-back-home' %>
    <div class="form-inputs fonts", style="width: 80%">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs fonts">
          <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: 'email',
                label: false,
                input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-actions fonts mt-4">
          <%= f.button :submit, "Send me", class: 'btn-pixel-full-width' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
