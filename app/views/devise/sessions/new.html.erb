<div class="home-banner pixel-art", style="background-image: url(<%= image_path('home_banner.png')%>)">
  <div class="home-container">
    <div class="home-title text-center">
      <h2>Welcome, Adventurer!</h1>
    </div>

    <div class="form-inputs">
      <div class="form-group">
        <%= link_to 'Login', new_path, class: 'login-button-disabled'%>
        <%= link_to 'Sign up', new_user_registration_path, class: 'login-button' %>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'submit-button' %>
        </div>
      <% end %>
<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
