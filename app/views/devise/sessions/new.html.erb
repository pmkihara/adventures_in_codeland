<div class="home-banner pixel-art", style="background-image: url(<%= image_path('home_banner.png')%>)">
  <div class="home-container">
    <div class="form-title text-center">
      <h2>Welcome, Adventurer!</h1>
    </div>
    <%= link_to 'X', root_path, class: 'x-back-home' %>
    <div class="form-inputs", style="width: 424px">
      <div class="form-group d-flex fonts">
        <%= link_to 'Log in', new_path, class: 'btn-form-secondary-disable'%>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn-form-secondary' %>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs fonts">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions fonts">
          <%= f.button :submit, "Log in", class: 'btn-form-main' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
