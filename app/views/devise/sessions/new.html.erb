<div class="home-banner pixel-art", style="background-image: url(<%= image_path('home_banner.png')%>)">
  <div class="home-container">
    <%= link_to 'âœ–', root_path, class: 'x-back-home' %>
    <div class="form-inputs", style="width: 80%">
      <div class="form-group d-flex fonts form-head-buttons mb-5">
        <%= link_to 'Log in', '#', class: 'btn-pixel-45w btn-pixel-45w-disable'%>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn-pixel-45w' %>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs fonts">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: 'email',
                      label: false,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      placeholder: 'password',
                      label: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions fonts">
          <%= f.button :submit, "Log in", class: 'btn-pixel-full-width' %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
