<div class="play-container" data-controller="play">
  <div class="play-window-view">
    <%= render 'game_menu' %>
    <div class="dialogue-layer"> <%# Sets a layer above the map for the dialogues %>
      <%= render 'dialogue' %>
    </div>
    <%= render'map' %>
  </div>
</div>

<div class="final-score hidden" data-play-target="finalScore">
  <div class="score-container">
    <h2>You did it!</h2>
    <p>You have helped Ruby find their way home!</p>
    <p>This is your final score:</p>
    <p class="score-number"><%= @play.score %></p>
    <%= link_to score_path do %>
      <div class="btn-pixel-full-width">
      <p>TO LEADERBOARD</p>
      </div>
    <% end %>
  </div>
</div>
